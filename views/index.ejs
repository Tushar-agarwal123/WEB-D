<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Product Sale Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .product-card:hover {
            box-shadow: 0 4px 20px rgba(0,0,0,0.15);
            transform: scale(1.02);
            transition: 0.3s;
        }
        .rating {
            color: #ffc107;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">ShopEase</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link active" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Products</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Cart</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <header class="bg-light py-5 text-center">
        <div class="container">
            <h1 class="display-4">Exclusive Product Sale!</h1>
            <p class="lead">Get the best deals on our top-selling products. Limited time offer!</p>
            <a href="#products" class="btn btn-primary btn-lg">Shop Now</a>
        </div>
    </header>

    <section id="products" class="py-5">
        <div class="container">
            <div class="row g-4">
                <!-- Product Card 1 -->
                <div class="col-md-4">
                    <div class="card product-card h-100">
                        <img src="https://via.placeholder.com/350x200?text=Product+1" class="card-img-top" alt="Product 1">
                        <div class="card-body">
                            <h5 class="card-title">Wireless Headphones</h5>
                            <p class="card-text">Experience high-quality sound with noise cancellation and long battery life.</p>
                            <div class="mb-2">
                                <span class="rating">&#9733;&#9733;&#9733;&#9733;&#9734;</span>
                                <span class="text-muted">(120 reviews)</span>
                            </div>
                            <h4 class="text-success">$59.99 <small class="text-muted text-decoration-line-through">$89.99</small></h4>
                            <button class="btn btn-outline-primary w-100" onclick="addToCart('Wireless Headphones')">Add to Cart</button>
                        </div>
                    </div>
                </div>
                <!-- Product Card 2 -->
                <div class="col-md-4">
                    <div class="card product-card h-100">
                        <img src="https://via.placeholder.com/350x200?text=Product+2" class="card-img-top" alt="Product 2">
                        <div class="card-body">
                            <h5 class="card-title">Smart Watch</h5>
                            <p class="card-text">Track your fitness, monitor your health, and stay connected on the go.</p>
                            <div class="mb-2">
                                <span class="rating">&#9733;&#9733;&#9733;&#9733;&#9733;</span>
                                <span class="text-muted">(200 reviews)</span>
                            </div>
                            <h4 class="text-success">$99.99 <small class="text-muted text-decoration-line-through">$149.99</small></h4>
                            <button class="btn btn-outline-primary w-100" onclick="addToCart('Smart Watch')">Add to Cart</button>
                        </div>
                    </div>
                </div>
                <!-- Product Card 3 -->
                <div class="col-md-4">
                    <div class="card product-card h-100">
                        <img src="https://via.placeholder.com/350x200?text=Product+3" class="card-img-top" alt="Product 3">
                        <div class="card-body">
                            <h5 class="card-title">Bluetooth Speaker</h5>
                            <p class="card-text">Portable, waterproof, and delivers powerful sound wherever you go.</p>
                            <div class="mb-2">
                                <span class="rating">&#9733;&#9733;&#9733;&#9733;&#9734;</span>
                                <span class="text-muted">(85 reviews)</span>
                            </div>
                            <h4 class="text-success">$39.99 <small class="text-muted text-decoration-line-through">$59.99</small></h4>
                            <button class="btn btn-outline-primary w-100" onclick="addToCart('Bluetooth Speaker')">Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Cart Modal -->
    <div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cartModalLabel">Cart</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="cartItems">
                    Your cart is empty.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="checkout()">Checkout</button>
                </div>
            </div>
        </div>
    </div>

    <button class="btn btn-primary position-fixed bottom-0 end-0 m-4 rounded-circle" style="z-index: 1050;" data-bs-toggle="modal" data-bs-target="#cartModal">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="white" class="bi bi-cart" viewBox="0 0 16 16">
            <path d="M0 1.5A.5.5 0 0 1 .5 1h1a.5.5 0 0 1 .485.379L2.89 5H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 14H4a.5.5 0 0 1-.491-.408L1.01 2H.5a.5.5 0 0 1-.5-.5zm3.14 4l1.25 6.5h7.22l1.25-6.5H3.14z"/>
        </svg>
        <span class="badge bg-danger" id="cartCount" style="position:absolute;top:0;right:0;">0</span>
    </button>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let cart = [];

        function addToCart(product) {
            cart.push(product);
            document.getElementById('cartCount').textContent = cart.length;
            showToast(product + " added to cart!");
        }

        function showToast(message) {
            let toast = document.createElement('div');
            toast.className = 'toast align-items-center text-bg-success border-0 position-fixed bottom-0 end-0 m-5';
            toast.role = 'alert';
            toast.ariaLive = 'assertive';
            toast.ariaAtomic = 'true';
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">${message}</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            `;
            document.body.appendChild(toast);
            let bsToast = new bootstrap.Toast(toast, { delay: 2000 });
            bsToast.show();
            toast.addEventListener('hidden.bs.toast', () => toast.remove());
        }

        document.getElementById('cartModal').addEventListener('show.bs.modal', function () {
            const cartItems = document.getElementById('cartItems');
            if (cart.length === 0) {
                cartItems.textContent = "Your cart is empty.";
            } else {
                cartItems.innerHTML = '<ul class="list-group">' +
                    cart.map(item => `<li class="list-group-item">${item}</li>`).join('') +
                    '</ul>';
            }
        });

        function checkout() {
            if (cart.length === 0) {
                alert("Your cart is empty!");
                return;
            }
            alert("Thank you for your purchase!");
            cart = [];
            document.getElementById('cartCount').textContent = 0;
            bootstrap.Modal.getInstance(document.getElementById('cartModal')).hide();
        }
    </script>
</body>
</html></svg>